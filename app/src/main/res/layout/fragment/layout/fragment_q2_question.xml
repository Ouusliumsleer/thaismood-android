<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EvaluationActivity.Q2QuestionFragment"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="582dp"
        android:layout_weight="1"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:background="@color/q_2q_theme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"
            android:fontFamily="@font/thsarabunnew_bold"
            android:text="@string/q_2q_header"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/q_2q_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/thsarabunnew_bold"
            android:textColor="@color/white"
            android:text="ข้อที่ 1 จาก 2 ข้อ"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:background="@drawable/box_border_2q"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/thsarabunnew"
                android:text="@string/q_2q_intro"
                android:gravity="center_horizontal"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/q_2q_question_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/thsarabunnew_bold"
                android:text="This is Question"
                android:ems="15"
                android:textSize="25dp" />

            <Button
                android:id="@+id/q_2q_choice_1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/q_2q_choice_unselected"
                android:layout_marginTop="50dp"
                android:text="@string/q_2q_ans_1"
                android:tag="1"/>

            <Button
                android:id="@+id/q_2q_choice_2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/q_2q_choice_unselected"
                android:layout_marginTop="20dp"
                android:text="@string/q_2q_ans_2"
                android:tag="0"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/q_2q_prev_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_border_unselected"
            android:enabled="false"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/thsarabunnew_bold"
            android:text="ย้อนกลับ"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/q_2q_next_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_border_unselected"
            android:enabled="false"
            android:fontFamily="@font/thsarabunnew_bold"
            android:text="ถัดไป"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </LinearLayout>
</LinearLayout>