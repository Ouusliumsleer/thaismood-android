<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMoodLevelFragment"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/box_border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:textSize="@dimen/fragment_header_text_size"
                android:text="@string/add_mood_level_mood_label" />

            <ImageView
                android:id="@+id/add_mood_level_emo"
                android:layout_width="@dimen/add_mood_emo_large_diment"
                android:layout_height="@dimen/add_mood_emo_large_diment"
                android:src="@drawable/emo_green_fill"/>

            <TextView
                android:id="@+id/add_mood_level_text_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/fragment_header_text_size"
                android:text="MOOD" />

            <LinearLayout
                android:id="@+id/add_mood_level_seek_bar_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/box_border">
                <TextView
                    android:id="@+id/add_mood_level_instruction_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/fragment_header_text_size"
                    android:gravity="center"
                    android:text="@string/add_mood_level_seek_scale_instruction" />

                <TextView
                    android:id="@+id/add_mood_level_mood_level_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="50dp"
                    android:gravity="center"
                    android:text="1" />

                <SeekBar
                    android:id="@+id/add_mood_level_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:progressDrawable="@drawable/seek_bg_yellow"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:progress="1"
                    android:min="1"
                    android:max="3" />
            </LinearLayout>

            <EditText
                android:id="@+id/add_mood_level_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/box_border"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:lines="6"
                android:hint="@string/add_mood_level_note_hint"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:scrollHorizontally="false" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/confirm_color">

        <Button
            android:id="@+id/add_mood_level_next_btn"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/thsarabunnew_bold"
            android:text="บันทึก"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

    </LinearLayout>


</LinearLayout>