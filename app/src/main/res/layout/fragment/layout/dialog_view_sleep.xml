<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:id="@+id/root_box"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/close_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:gravity="right">

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/ios_red"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="X"/>

    </LinearLayout>

    <TextView
        android:id="@+id/date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/thsarabunnew_bold"
        android:textSize="30dp"
        android:text="3/6/2019"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/sleep_time_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/box_border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_band"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="x"
                android:textSize="100dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ชั่วโมง" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"

                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/sleeping"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/thsarabunnew_bold"
                    android:textSize="20dp"
                    android:text="เวลานอน:"/>
                <TextView
                    android:id="@+id/start_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/thsarabunnew_bold"
                    android:textSize="20dp"
                    android:text="-"/>

            </LinearLayout>
            <LinearLayout
                android:layout_toEndOf="@id/mood_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/awaken"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/thsarabunnew_bold"
                    android:textSize="20dp"
                    android:text="เวลาตื่น:"/>
                <TextView
                    android:id="@+id/end_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/thsarabunnew_bold"
                    android:textSize="20dp"
                    android:text="-"/>

            </LinearLayout>
            <LinearLayout
                android:layout_toEndOf="@id/mood_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_add_sleep"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/thsarabunnew_bold"
                    android:textSize="20dp"
                    android:text="รวมเวลานอน:"/>
                <TextView
                    android:id="@+id/sleep_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/thsarabunnew_bold"
                    android:textSize="20dp"
                    android:text="-"/>

            </LinearLayout>


        </LinearLayout>
        <Button
            android:id="@+id/edit_btn"
            android:textColor="@color/white"
            android:background="@drawable/buttonstyle"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="แก้ไข"/>

    </LinearLayout>





</LinearLayout>