<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragmentList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_header_height"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/fragment_header_left_matgin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fragment_header_text_size"
            android:layout_marginLeft="@dimen/fragment_header_left_matgin"
            android:textColor="@color/white"
            android:text="@string/header_fragment_list"/>

    </LinearLayout>

</LinearLayout>