<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context=".QMDQFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/q_mdq_theme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"
            android:text="@string/q_mdq_header"
            android:textSize="@dimen/fragment_header_text_size" />

        <TextView
            android:id="@+id/q_mdq_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="ข้อที่ 1 จาก 15 ข้อ"
            android:textSize="@dimen/fragment_header_text_size" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/box_border"
            android:padding="20dp">
            <TextView
                android:id="@+id/q_mdq_intro_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:text="This is Question"
                android:textSize="@dimen/question_text_size" />

            <TextView
                android:id="@+id/q_mdq_question_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:text="This is Question"
                android:textSize="@dimen/question_text_size" />

            <LinearLayout
                android:id="@+id/q_mdq_part_1_2_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:gravity="center">

                <Button
                    android:id="@+id/q_mdq_choice_1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/q_mdq_choice_unselected"
                    android:text="@string/q_mdq_ans_1"
                    android:tag="1"/>

                <Button
                    android:id="@+id/q_mdq_choice_2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/q_mdq_choice_unselected"
                    android:layout_marginTop="20dp"
                    android:text="@string/q_mdq_ans_2"
                    android:tag="0"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/q_mdq_part_3_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/q_mdq_part_3_choice_1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/q_mdq_choice_unselected"
                    android:text="@string/q_mdq_ans_3"
                    android:tag="0"/>

                <Button
                    android:id="@+id/q_mdq_part_3_choice_2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/q_mdq_choice_unselected"
                    android:layout_marginTop="20dp"
                    android:text="@string/q_mdq_ans_4"
                    android:tag="1"/>

                <Button
                    android:id="@+id/q_mdq_part_3_choice_3"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/q_mdq_choice_unselected"
                    android:layout_marginTop="20dp"
                    android:text="@string/q_mdq_ans_5"
                    android:tag="2"/>

                <Button
                    android:id="@+id/q_mdq_part_3_choice_4"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/q_mdq_choice_unselected"
                    android:layout_marginTop="20dp"
                    android:text="@string/q_mdq_ans_6"
                    android:tag="3"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/q_mdq_prev_btn"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:background="@drawable/button_border_unselected"
            android:enabled="false"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/thsarabunnew_bold"
            android:text="ย้อนลับ"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/q_mdq_next_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/button_border_unselected"
            android:enabled="false"
            android:fontFamily="@font/thsarabunnew_bold"
            android:text="ถัดไป"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </LinearLayout>
</LinearLayout>