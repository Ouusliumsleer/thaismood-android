<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/dialog_border"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/regist_dialog_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="end"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/thaismood_logo_demo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ลงทะเบียน"
            android:textSize="30dp"
            android:fontFamily="@font/thsarabunnew_bold"
            android:textStyle="bold"
            android:gravity="end" />
        <EditText
            android:id="@+id/register_email"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edittext_h"
            android:background="@drawable/edittext1"
            android:paddingLeft="@dimen/edittext_padding_left"

            android:ems="12"
            android:singleLine="true"
            android:hint="อีเมล" />

        <EditText
            android:id="@+id/register_email_confirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edittext_h"
            android:background="@drawable/edittext1"
            android:paddingLeft="@dimen/edittext_padding_left"
            android:layout_marginTop="@dimen/edittext_margin_top"
            android:layout_marginBottom="5dp"
            android:ems="12"
            android:singleLine="true"
            android:hint="ยืนยันอีเมล" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edittext_h"
            android:background="@drawable/edittext1"
            android:paddingLeft="@dimen/edittext_padding_left"
            android:layout_marginTop="@dimen/edittext_margin_top"

            android:ems="12"
            android:singleLine="true"
            android:hint="รหัสผ่าน"
            android:password="true" />

        <EditText
            android:id="@+id/register_password_confirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edittext_h"
            android:background="@drawable/edittext1"
            android:paddingLeft="@dimen/edittext_padding_left"
            android:layout_marginTop="@dimen/edittext_margin_top"

            android:ems="12"
            android:singleLine="true"
            android:hint="ยืนยันรหัสผ่าน"
            android:password="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2sp"
            android:layout_weight="10"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/register_submit_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/confirm_color"
                android:textColor="#ffffff"
                android:layout_marginTop="@dimen/edittext_margin_top"

                android:text="ลงทะเบียน" />

        </LinearLayout>



    </LinearLayout>


</android.support.constraint.ConstraintLayout>